{% extends 'admin_base.html.twig' %}

{% block title %}{{'user.index'|trans}}{% endblock %}

{% block body %}
    <h1>{{'user.index'|trans}}</h1>
    <div class="table-responsive" id="catg">
        <table class="table">
            <thead>
                <tr>
                    <th>{{'user.id'|trans}}</th>
                    <th>{{'user.username'|trans}}</th>
                    <th>{{'user.email'|trans}}</th>
                    <th>{{'user.roles'|trans}}</th>
                    <th>{{'actions'|trans}}</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                    {% for role in user.roles %}
                        <span class="badge badge-secondary m-1">{{ role }}</span>
                    {% endfor %}
                    </td>

                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">{{'show'|trans}}</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">{{'edit'|trans}}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{{'no.records.found'|trans}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('user_new') }}">{{'user.add'|trans}}</a>
    </div>
{% endblock %}
