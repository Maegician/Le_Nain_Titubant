{% extends 'admin_base.html.twig' %}

{% block title %}{{'category.list'|trans}}{% endblock %}

{% block body %}
    <h1>{{'category.list'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'category.id'|trans}}</th>
                <th>{{'category.name'|trans}}</th>
                <th>{{'actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">{{'show'|trans}}</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">{{'edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{'no.records.found'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_add') }}">{{'category.add'|trans}}</a>
{% endblock %}
