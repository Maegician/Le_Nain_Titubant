{% extends 'base.html.twig' %}

{% block body %}
<h1>{{ beer.name }}</h1>
<article>
    {{ beer.origin }}
    {{ beer.categories }}
    {{ beer.brewing_type }}
    {{ beer.alcohol }}
    {{ beer.image }}
</article>
<hr/>
<form action="{{ path('app_beer_score', {'id' :beer.id}) }}" method="post" id="score-form">
    <p>{{ 'beer.add_score'|trans }}</p>
    <button type="submit" name="score" class="btn btn-link m-1" value="1"><i class="fas fa-star"></i></button>
    <button type="submit" name="score" class="btn btn-link m-1" value="2"><i class="fas fa-star"></i></button>
    <button type="submit" name="score" class="btn btn-link m-1" value="3"><i class="fas fa-star"></i></button>
    <button type="submit" name="score" class="btn btn-link m-1" value="4"><i class="fas fa-star"></i></button>
    <button type="submit" name="score" class="btn btn-link m-1" value="5"><i class="fas fa-star"></i></button>
    <input type="hidden" name="_token" value="{{ csrf_token('score' ~ beer.id) }}">
</form>

{% endblock %}