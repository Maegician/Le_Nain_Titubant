{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">

        <div class="col-3 mr-5 mt-5 text-center">
        
            <div class="card" style="width: 18rem;">
                <img src="{{ asset(beer.image.webPath) }}" class="card-img-top" alt="{{ beer.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ beer.name }}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ 'beer.origin'|trans }} : {{ beer.origin }}</li>
                    <li class="list-group-item">{{ 'beer.category'|trans }} : {{ beer.category }}</li>
                    <li class="list-group-item">{{ 'beer.brewing_type'|trans }} : {{ beer.brewingType }}</li>
                    <li class="list-group-item">{{ 'beer.alcohol'|trans }} : {{ beer.alcohol }}Â°</li>
                </ul>
            </div>
        </div>

        <div class="col-8 mt-5 text-justify">
            <p>{{ 'beer.description'|trans }} : {{ beer.description }}</p>
        </div>
    </div>

    <br/>
    <hr/>

    <div class="row">

        <div class="col-12 justify-content-center">

            <form action="{{ path('app_beer_score', {'id' :beer.id}) }}" method="post" id="score-form">
            <p>{{ 'beer.add_score'|trans }}</p>
                <button type="submit" name="score" class="btn btn-link m-1" value="1"><i class="fas fa-beer"></i></button>
                <button type="submit" name="score" class="btn btn-link m-1" value="2"><i class="fas fa-beer"></i></button>
                <button type="submit" name="score" class="btn btn-link m-1" value="3"><i class="fas fa-beer"></i></button>
                <button type="submit" name="score" class="btn btn-link m-1" value="4"><i class="fas fa-beer"></i></button>
                <button type="submit" name="score" class="btn btn-link m-1" value="5"><i class="fas fa-beer"></i></button>

                <input type="hidden" name="_token" value="{{ csrf_token('score' ~ beer.id) }}">
            
            <div class="form-group">

            <br/>

                <label for="comment">Example textarea</label>
                <textarea class="form-control" id="comment" rows="3" name="comment"></textarea>
            </div>
            </form>
        </div>
    </div>
</div>   

{% endblock %}