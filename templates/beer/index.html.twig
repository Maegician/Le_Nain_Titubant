{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">

        <div class="col-12 mt-5">

            <div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active" data-interval="10000">
                <img src="{{ asset('img/carousel1.jpg') }}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item" data-interval="2000">
                <img src="{{ asset('img/carousel2.jpg') }}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="{{ asset('img/carousel3.jpg') }}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="{{ asset('img/carousel4.jpg') }}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="{{ asset('img/carousel5.jpg') }}" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="{{ asset('img/carousel6.jpg') }}" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            </div>

        </div>

        {% for beer in beers %}

        <div class="col-4 d-flex justify-content-center mt-5 text-center">

            <div class="card" style="width: 18rem;">
                <img src="{{ asset(beer.image.webPath) }}" class="card-img-top" alt="{{ beer.name }}">
            <div class="card-body">
                <h5 class="card-title"><a href="{{ path('app_beer_show', {'id': beer.id}) }}" class="btn btn-secondary">{{ beer.name }}</a></h5>
            </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ 'beer.origin'|trans }} : {{ beer.origin }}</li>
                    <li class="list-group-item">{{ 'beer.category'|trans }} : {{ beer.category }}</li>
                    <li class="list-group-item">{{ 'beer.brewing_type'|trans }} : {{ beer.brewingType }}</li>
                    <li class="list-group-item">{{ 'beer.alcohol'|trans }} : {{ beer.alcohol }}Â°</li>
                </ul>
            </div>
        </div>

        {% endfor %}
    </div>
</div>

<div class="row d-flex justify-content-center mt-5 text-center">
    {% include 'decorators/_pagination.html.twig' with {'route': 'app_beer_index'} %}
</div>
{% endblock %}
