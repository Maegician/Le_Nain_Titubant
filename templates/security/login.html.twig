{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container text-center my-5">
    <div class="row align-items-center justify-content-center">
        <div data-aos="zoom-in-right" class="col-12 col-md-3">
            <img class="register-sign my-2 mr-4" src="{{ asset('img/register-sign-3.jpg') }}">
            <img class="register-sign my-2" src="{{ asset('img/register-sign-4.jpg') }}">
        </div>
        <div class="col-12 col-md-6 my-3">
            <form method="post">
                {# {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %} #}

                <h1 class="mb-3">{{ 'login.login'|trans }}</h1>
                <label for="inputUsername" class="my-2">{{ 'login.username'|trans }}</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-4" required autofocus>
                {# <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus> #}
                <label for="inputPassword" class="my-2">{{ 'login.password'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control mb-4" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3" data-tippy-content="Attention ! N'utiliser cette fonctionnalitÃ© que sur un appareil de confiance.">
                    <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                    <label for="remember_me">{{ 'login.keep'|trans }}</label>
                </div>

                <button class="btn btn-lg btn-danger mt-5" type="submit">
                    {{ 'login.login'|trans }}
                </button>
            </form>
        </div>
        <div data-aos="zoom-in-left" class="col-12 col-md-3">
            <img class="register-sign my-2 mr-4" src="{{ asset('img/register-sign-5.jpg') }}">
            <img class="register-sign my-2" src="{{ asset('img/register-sign-6.jpg') }}">
        </div>
    </div>
</div>
<div class="separator separator3"></div>
{% endblock %}
